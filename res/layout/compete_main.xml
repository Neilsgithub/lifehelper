<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" 
    android:orientation="vertical">
    
    <EditText 
        android:id="@+id/editTest"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:hint="Welcom to WindowsPhone8"
        android:background="#87ceff"
        android:gravity="center_vertical|right"
        android:singleLine="false"
        android:editable="false"/>
    
    <LinearLayout android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:orientation="horizontal">
        
        <Button 
            android:id="@+id/clear"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="清除"
            android:background="@drawable/ground3"/>
        
         <View 
            android:layout_width="1dp"
            android:background="#ffffff"
            android:layout_height="fill_parent"/>
        
        <Button 
            android:id="@+id/next"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="退格"
            android:background="@drawable/ground3"/>
        
    </LinearLayout>
    
    <LinearLayout android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:orientation="horizontal">
        
        <Button 
            android:id="@+id/num_7"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="7"
            android:padding="0dp"
            android:layout_weight="1"
            android:background="@drawable/ground"
            />
        
        <View 
            android:layout_width="1dp"
            android:background="#ffffff"
            android:layout_height="fill_parent"/>
        
        <Button 
            android:id="@+id/num_8"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="8"
            android:layout_weight="1"
            android:background="@drawable/ground"/>
        
        <View 
            android:layout_width="1dp"
            android:background="#ffffff"
            android:layout_height="fill_parent"/>
        
        <Button 
            android:id="@+id/num_9"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="9"
            android:layout_weight="1"
            android:background="@drawable/ground"/>
        
        <View 
            android:layout_width="1dp"
            android:background="#ffffff"
            android:layout_height="fill_parent"/>
        
        <Button 
            android:id="@+id/num_add"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="+"
            android:layout_weight="1"
            android:background="@drawable/ground2"/>
        
        
    </LinearLayout>
    <View 
            android:layout_width="fill_parent"
            android:background="#ffffff"
            android:layout_height="1dp"/>
    
    <LinearLayout android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:orientation="horizontal">
        
        <Button 
            android:id="@+id/num_4"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="4"
            android:layout_weight="1"
            android:background="@drawable/ground"/>
        
        <View 
            android:layout_width="1dp"
            android:background="#ffffff"
            android:layout_height="fill_parent"/>
        
        <Button 
            android:id="@+id/num_5"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="5"
            android:layout_weight="1"
            android:background="@drawable/ground"/>
        
        <View 
            android:layout_width="1dp"
            android:background="#ffffff"
            android:layout_height="fill_parent"/>
        
        <Button 
            android:id="@+id/num_6"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="6"
            android:layout_weight="1"
            android:background="@drawable/ground"/>
        
        <View 
            android:layout_width="1dp"
            android:background="#ffffff"
            android:layout_height="fill_parent"/>
        
        <Button 
            android:id="@+id/num_jian"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="-"
            android:layout_weight="1"
            android:background="@drawable/ground2"/>
        
    </LinearLayout>
    
    <View 
            android:layout_width="fill_parent"
            android:background="#ffffff"
            android:layout_height="1dp"/>
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:orientation="horizontal">
        
        <Button 
            android:id="@+id/num_1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="1"
            android:layout_weight="1"
            android:background="@drawable/ground"/>
        
        <View 
            android:layout_width="1dp"
            android:background="#ffffff"
            android:layout_height="fill_parent"/>
        
        <Button 
            android:id="@+id/num_2"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="2"
            android:layout_weight="1"
            android:background="@drawable/ground"/>
        
        <View 
            android:layout_width="1dp"
            android:background="#ffffff"
            android:layout_height="fill_parent"/>
        
        <Button 
            android:id="@+id/num_3"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="3"
            android:layout_weight="1"
            android:background="@drawable/ground"/>
        
        <View 
            android:layout_width="1dp"
            android:background="#ffffff"
            android:layout_height="fill_parent"/>
        
        <Button 
            android:id="@+id/num_chen"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="×"
            android:layout_weight="1"
            android:background="@drawable/ground2"/>
        
    </LinearLayout>
    
    <View 
            android:layout_width="fill_parent"
            android:background="#ffffff"
            android:layout_height="1dp"/>
    
    <LinearLayout android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:orientation="horizontal">
        
        <Button 
            android:id="@+id/num_dian"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="."
            android:layout_weight="1"
            android:background="@drawable/ground2"/>
        
        <View 
            android:layout_width="1dp"
            android:background="#ffffff"
            android:layout_height="fill_parent"/>
        
        <Button 
            android:id="@+id/num_0"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="0"
            android:layout_weight="1"
            android:background="@drawable/ground"/>
        
        <View 
            android:layout_width="1dp"
            android:background="#ffffff"
            android:layout_height="fill_parent"/>
        
        <Button 
            android:id="@+id/num_deng"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="="
            android:layout_weight="1"
            android:background="@drawable/ground2"/>
        
        <View 
            android:layout_width="1dp"
            android:background="#ffffff"
            android:layout_height="fill_parent"/>
        
        <Button 
            android:id="@+id/num_chu"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="÷"
            android:layout_weight="1"
            android:background="@drawable/ground2"/>
        
    </LinearLayout>

    

</LinearLayout>